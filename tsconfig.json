{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2015.promise", "es6", "dom", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "declaration": true,
    "isolatedModules": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
