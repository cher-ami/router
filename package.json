{
  "name": "@cher-ami/router",
  "version": "2.0.0-beta-5",
  "description": "A fresh react router designed for flexible route transitions",
  "author": "Willy Brauner",
  "license": "MIT",
  "main": "dist/index.js",
  "private": false,
  "source": "src/index.ts",
  "keywords": [
    "router",
    "react",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cher-ami/router.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "rm -rf dist",
    "compile": "npm run clean && microbundle --jsx React.createElement",
    "size": "size-limit",
    "size-why": "size-limit -- --why",
    "test": "jest && npm run size",
    "test:watch": "jest --watch",
    "pre-publish": "npm run compile && npm run test"
  },
  "size-limit": [
    {
      "limit": "16 kB",
      "path": "dist/**/*.js"
    }
  ],
  "dependencies": {
    "@wbe/debug": "^1.0.0",
    "history": "^5.1.0",
    "path-to-regexp": "^6.2.0"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "*",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "*",
    "@babel/preset-typescript": "*",
    "@size-limit/preset-big-lib": "^7.0.3",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "babel-jest": "*",
    "gsap": "^3.8.0",
    "jest": "^27.3.1",
    "microbundle": "^0.14.2",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "regenerator-runtime": "^0.13.9",
    "size-limit": "^7.0.3",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "vite": "^2.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js,less,css,json,md}": [
      "prettier --write"
    ]
  }
}
