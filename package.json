{
  "name": "@cher-ami/router",
  "version": "3.0.0-beta.7",
  "description": "A fresh react router designed for flexible route transitions",
  "author": "Willy Brauner",
  "license": "MIT",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "private": false,
  "keywords": [
    "router",
    "react",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cher-ami/router.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && microbundle --jsx React.createElement",
    "build:watch": "microbundle watch --no-sourcemap --format esm --jsx React.createElement",
    "example-client:dev": "pnpm --filter ./examples/example-client run dev",
    "example-client:build": "pnpm --filter ./examples/example-client run build",
    "example-ssr:dev": "pnpm --filter ./examples/example-ssr run dev",
    "example-ssr:build": "pnpm --filter ./examples/example-ssr run build",
    "size": "size-limit",
    "size-why": "size-limit -- --why",
    "test": "jest && npm run size",
    "test:watch": "jest --watch",
    "pre-publish": "npm run build && npm run test"
  },
  "size-limit": [
    {
      "limit": "12 kB",
      "path": "dist/**/*.js"
    }
  ],
  "dependencies": {
    "@wbe/debug": "^1.0.0",
    "history": "^5.3.0",
    "path-to-regexp": "^6.2.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "*",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "*",
    "@babel/preset-typescript": "*",
    "@size-limit/preset-big-lib": "^7.0.8",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "babel-jest": "*",
    "jest": "^28.1.2",
    "jest-environment-jsdom": "^28.1.2",
    "microbundle": "^0.15.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "regenerator-runtime": "^0.13.9",
    "size-limit": "^7.0.8",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js,less,css,json,md}": [
      "prettier --write"
    ]
  }
}
