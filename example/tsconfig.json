{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../",
    "module": "commonjs",
    "target": "ES5",
    "lib": ["es2015.promise", "es6", "dom", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "types": ["node"],
    "declaration": true,
    "isolatedModules": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": false
  },
  "include": ["./**/*"],
  "exclude": ["dist"]
}
